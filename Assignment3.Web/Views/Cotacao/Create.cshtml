@model Assignment3.Web.Models.Cotacao

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutHeaderPortal.cshtml";
}


<div class="container">

@if (ViewBag.MensagemValidacao != null)
{
    <div id="divValidacao" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Atenção!</strong>&nbsp; @ViewBag.MensagemValidacao
        <br />
    </div>
}
else
{

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cotações</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            
            <div class="form-group">
                @Html.LabelFor(model => model.SolicitanteId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="dropdown">                            
                        @Html.DropDownListFor(model => model.SolicitanteId, new SelectList(ViewBag.Solicitantes, "SolicitanteId", "Nome"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataSolicitacao, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>            

            <div class="form-group">
                @Html.LabelFor(model => model.DataSolicitacao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DataSolicitacao, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.DataSolicitacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataValidade, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DataValidade, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.DataValidade, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DescricaoSolicitacao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DescricaoSolicitacao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DescricaoSolicitacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ComentariosGerais, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ComentariosGerais, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ComentariosGerais, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.TipoCotacao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="dropdown">
                        @Html.DropDownListFor(model => model.TipoCotacao, new SelectList(new List<SelectListItem>
                                        {
                                            new SelectListItem() {Text = "Cotação Automóvel", Value="0"},
                                            new SelectListItem() {Text = "Cotação Imóvel", Value="1"}                                            
                                        },
                             "Value", "Text", 0), new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.DataSolicitacao, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>

</div>